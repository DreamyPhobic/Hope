<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.QuestionFragment">
    <TextView
            style="@android:style/TextAppearance.Material.Title"
            android:id="@+id/questionStatement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Some text text text, more text text text and more text text text and the datqa"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:max="4"
            android:progress="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/questionStatement"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="64dp"/>
    <TextView
            android:id="@+id/valueSelectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Material.Body1"
            android:textAllCaps="true"
            android:text="Never"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>