<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="4dp"
        app:cardCornerRadius="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp">
        <Button
                android:text="Depression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/depressionButton"
                android:layout_marginEnd="10dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/socialAnxietyButton"
                app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginStart="16dp"/>
        <Button
                android:text="Social Anxiety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/socialAnxietyButton"
                android:layout_marginStart="10dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintStart_toEndOf="@+id/depressionButton" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="21dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>